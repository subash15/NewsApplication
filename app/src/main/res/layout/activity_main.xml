<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2cfcf"
    tools:context="mynewsapp.subash.com.newsapplication.MainActivity">


    <TextView
        android:id="@+id/news_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#FFFF"
        android:gravity="center"
        android:text=" Top Headlines Today "
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <View
        android:id="@+id/baseline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/news_headline"
        android:background="#FFFF" />



        <ListView
            android:id="@+id/list_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_headline"
            android:background="#f7e1e1"
            android:divider="#d7cece"
            android:dividerHeight="1dp"
            android:visibility="visible" />


    <ProgressBar
        android:id="@+id/progress_news_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
